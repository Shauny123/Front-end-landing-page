<!-- Optional: non-functional stubs to hook your logic later.
     Keep or remove as needed; they do not change appearance. -->
<script>
/* Scope: minimal placeholders (no external requests).
   Wire your own logic to set #sc-state and filter cards. */
document.currentScript && (function(){
  const elZip = document.getElementById('sc-zip');
  const elState = document.getElementById('sc-state');
  const btnShow = document.querySelector('[data-action="show"]');
  if (btnShow && elZip && elState) {
    btnShow.addEventListener('click', () => {
      // Placeholder: set state to "Detected" with entered ZIP (no real lookup).
      elState.textContent = elZip.value ? `ZIP ${elZip.value}` : '—';
    });
  }
})();
</script>
