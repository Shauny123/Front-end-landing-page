<!-- Minimal placeholder JS (no external requests) -->
<script>
document.currentScript && (function(){
  const elZip = document.getElementById('ws-zip');
  const elState = document.getElementById('ws-state');
  const btnShow = document.querySelector('[data-action="ws-show"]');
  if (btnShow && elZip && elState) {
    btnShow.addEventListener('click', () => {
      elState.textContent = elZip.value ? `ZIP ${elZip.value}` : '—';
    });
  }
})();
</script>
